<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.youth.banner.Banner
            android:id="@+id/banner_security_home"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:indicator_normal_width="6dp"
            app:indicator_height="6dp"
            app:indicator_gravity="center"
            app:indicator_margin="10dp"
            app:indicator_radius="3dp"
            app:indicator_selected_width="8dp"
            app:indicator_space="3dp"
            app:indicator_normal_color="@color/indicator_normal_color"
            app:indicator_selected_color="@color/indicator_selected_color"

    />

    <com.xxr.kdapp.view.StatusBarHeightView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:use_type="use_padding_top"
            android:orientation="vertical" >
        <!--这里放内容布局或View-->


    </com.xxr.kdapp.view.StatusBarHeightView>

</RelativeLayout>